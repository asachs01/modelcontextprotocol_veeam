# Veeam Backup & Replication MCP Server Configuration

# VBR Server Connection
VBR_HOST=your-vbr-server.example.com
VBR_USERNAME=.\\Administrator
VBR_PASSWORD=your-password-here

# TLS Configuration
# Set to "true" to reject unauthorized (self-signed) certificates
VBR_REJECT_UNAUTHORIZED=false

# Transport Configuration
# "stdio" (default) or "http"
VBR_TRANSPORT=stdio
# Port for HTTP transport mode
VBR_HTTP_PORT=3000

# Push Notifications (HTTP transport only)
VBR_ENABLE_NOTIFICATIONS=false
VBR_POLL_INTERVAL_MS=30000
